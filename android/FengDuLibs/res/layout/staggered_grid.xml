<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/app_bg_color" >
    <FrameLayout 
        android:id="@+id/frame_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.fengdu.widgets.pullview.PullToRefreshStaggeredGridView
        android:layout_below="@id/frame_ad"
        android:id="@+id/pull_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </com.fengdu.widgets.pullview.PullToRefreshStaggeredGridView>
    
    <include 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_loading_data"/>
    
    <include 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_refresh_loading_data"/>
</RelativeLayout>
